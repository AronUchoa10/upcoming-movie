<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_large">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/spacing_large"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/shape_round_left_search">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/spacing_medium"
                android:src="@drawable/ic_search_white_24dp"
                android:tint="@color/black_color"/>

            <EditText
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/search_movies" />

        </LinearLayout>



        <Button
            android:id="@+id/act_search_btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/searchView"
            android:textColor="@color/white_color"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@drawable/shape_round_right_search"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/search_progress_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/search_movie_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/label_no_movie_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/letter_large"
            android:text="@string/no_movie_found"
            android:visibility="gone"/>

    </FrameLayout>


</LinearLayout>